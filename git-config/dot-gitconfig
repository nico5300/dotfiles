[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
[mergetool "meld"]
    # For local partial merged file
    #cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED" 
    # For commmon file ancestor
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[cinnabar]
